        <VBox spacing="10">
            <Label text="Tu Flota" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <GridPane fx:id="gridHumano" prefWidth="400" prefHeight="400" 
                      gridLinesVisible="true" style="-fx-border-color: black; -fx-border-width: 2;"/>
        </VBox>
        
        <!-- Enemy Board -->
        <VBox spacing="10">
            <Label text="Tablero Enemigo" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
